<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_INTEC.LogInPage"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout 
            VerticalOptions="Center" 
            Padding="10"
            >
            <Image 
                Source="inteclogo.jpg" 
                WidthRequest="150"
                HeightRequest="150"
             />
            <Entry 
                x:Name="emailEntry"
                Placeholder="Email"
                Text="{Binding Email}"
             />
            <Entry 
                x:Name="passwordEntry"
                Placeholder="Password" 
                Text="{Binding Password}"
                IsPassword="True"
             />
            <Button 
                Text="Login" 
                TextColor="White"  
                BackgroundColor="Red" 
                Command="{Binding LogInCommand}" 
             />
            <Button
                Text="Register"
                TextColor="White"
                BackgroundColor="Red"
                Command="{Binding SignUpCommand}"
                />
        </StackLayout>
    </ScrollView>
</ContentPage>